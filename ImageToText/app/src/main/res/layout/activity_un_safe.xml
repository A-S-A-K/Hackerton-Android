<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation = "vertical"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UnSafeActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:padding="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="300dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="bottom"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="5dp"
                    android:text="위험군"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="10dp"
                    android:ems="10"
                    android:inputType="textMultiLine"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="5dp"
                    android:text="해당 상품의 구매자들이 선호하는 상품"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="200dp" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:background="#ff0000"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/unsafe_iv_1"
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:layout_gravity="center" />

                            <TextView
                                android:id="@+id/unsafe_tv_1"
                                android:layout_width="150dp"
                                android:layout_height="10dp"
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:text="상품 이름 1"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:background="#00ff00"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/unsafe_iv_2"
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:layout_gravity="center" />

                            <TextView
                                android:id="@+id/unsafe_tv_2"
                                android:layout_width="150dp"
                                android:layout_height="10dp"
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:text="상품 이름 2"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:background="#0000ff"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/unsafe_iv_3"
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:layout_gravity="center" />

                            <TextView
                                android:id="@+id/unsafe_tv_3"
                                android:layout_width="150dp"
                                android:layout_height="10dp"
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:text="상품 이름 3"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:background="#ff0000"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/unsafe_iv_4"
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:layout_gravity="center" />

                            <TextView
                                android:id="@+id/unsafe_tv_4"
                                android:layout_width="150dp"
                                android:layout_height="10dp"
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:text="상품 이름 4"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:background="#00ff00"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/unsafe_iv_5"
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:layout_gravity="center" />

                            <TextView
                                android:id="@+id/unsafe_tv_5"
                                android:layout_width="150dp"
                                android:layout_height="10dp"
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:text="상품 이름 5"/>

                        </LinearLayout>

                    </LinearLayout>

                </HorizontalScrollView>



            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>